<div class="text-center">
  <h1 class="pt-5">ログイン</h1>
</div>

<div class="row justify-content-center">
  <div class="col-sm-6 mt-4 ">

    <%= form_with(url: login_path,scope: :session, local: true) do |f| %>
    

      <div class="form-group">
        <%= f.label :email, 'メール',class: "text-danger  font-weight-bold" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード',class: "text-danger  font-weight-bold"%>
        <%= f.password_field :password, class: 'form-control' %>
      </div>


      <%= f.submit 'ログインしてMyページへ', class: 'btn btn-primary btn-block mt-5 active' %>
    <% end %>
    
    <p class="mt-4"><span class="font-weight-bold text-danger">初めての方は新規登録お願いします。</span><%= link_to '新規登録へ', signup_path, class: "font-weight-bold btn btn-success" %></p>
  </div>
</div>


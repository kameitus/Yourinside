<% unless current_user == user %>
 <% if current_user.praise?(user) %>
  <%= form_with(model: current_user.greats.find_by(great_id: user.id), local: true, method: :delete) do |f| %>
   <%= hidden_field_tag :great_id, user.id %>
   <%= f.submit "このインタビューの拍手を取り消す", class: 'btn btn-danger py-4 mt-1 mb-5 font-weight-bold' %>
  <% end %>
 <% else %>
  <%= form_with(model: current_user.greats.build,local:true) do |f| %>
    <%= hidden_field_tag :great_id, user.id %>
    <%= f.submit "このインタビューへ拍手を贈りたい方はこちらをクリック！", class: 'btn btn-info py-4 mt-1 mb-5 font-weight-bold' %>
  <% end %>
 <% end %>
<% end %>

<div class="pt-5">
  <%= search_form_for @q do |f| %>
   <%= f.label :name_cont, "名前", class:"text-danger bg-light" %>
   <%= f.text_field :name_cont %>
  
   <%= f.label :area_eq, "地域", class:"text-danger bg-light" %>
   <%= f.collection_select :area_eq,Prefecture.all,:name, :name,:include_blank => '指定なし' %>
        
   <%= f.label :age_eq, "年齢", class:"text-danger bg-light" %>
   <%= f.select :age_eq,{
        "10~15":"10~15","15~20":"15~20","20~25":"20~25","25~30":"25~30","30~35":"30~35","35~40":"35~40",
        "40~45":"40~45","45~50":"45~50","50~55":"50~55","55~60":"55~60","60~":"60~"},:include_blank => '指定なし'%>
    
   <%= f.label :gender_eq, "性別", class:"text-danger bg-light" %>
   <%= f.select :gender_eq,{男性:"男性",女性:"女性",その他:"その他"},:include_blank => '指定なし'%><br/>
    
   <%= f.label :part_eq, "担当", class:"text-danger bg-light" %>
   <%= f.select :part_eq,{vocal:"vocal",guitar:"guitar",bass:"bass",drum:"drum",keyboard:"keyboard",other:"other"},:include_blank => '指定なし' %>
        
   <%= f.label :category_eq, "ジャンル", class:"text-danger bg-light" %>
   <%= f.select :category_eq,{rock:"rock",punk:"punk",hardcore:"hardcore","post-punk":"post-punk","post-hardcore":"post-hardcore",emo:"emo","hip-hop":"hip-hop",
        reggae:"reggae",folk:"folk",instrument:"instrument",noise:"noise",industrial:"industrial",dub:"dub",jazz:"jazz",other:"other"},:include_blank => '指定なし'%><br/>
        
   <%= f.label :comment_cont, "キーワード検索", class:"text-danger bg-light" %>
   <%= f.search_field :comment_cont %>
   <div class=" row justify-content-start mt-3">
     <%= f.submit "インタビュー検索", class:"btn btn-primary"%>
   </div>
  <% end %>
</div>

<table class="table table-hover table-bordered mt-4 bg-light">
 <thead>
   <th>名前</th>
   <th>地域</th> 
   <th>年齢</th>
   <th>性別</th>
   <th>担当</th>
   <th>ジャンル</th>
 </thead>
 <% @users.each do |user| %>
  <tbody>
   <td><%= user.name %></td>
   <td><%= user.area %></td>
   <td><%= user.age %></td>
   <td><%= user.gender %></td>
   <td><%= user.part %></td>
   <td><%= user.category %></td>
  </tbody>
 <% end %>
</table>


 <%= paginate @users %>
 
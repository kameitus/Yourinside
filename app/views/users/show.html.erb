<%= form_with model:@user do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
<% end %>

<div class="row pt-3">
  <div class="col-sm-4">
   <h3><%= @user.name %></h3>
   <p><%= image_tag @user.icon.url %></p>
    <table class="table table-sm table-bordered table-light">
      <tr><td>[地域]  <%= @user.area %></td></tr>
      <tr><td>[年齢]  <%= @user.age %></td></tr>
      <tr><td>[性別]  <%= @user.gender %></td></tr>
      <tr><td>[担当]  <%= @user.part %></td></tr>
      <tr><td>[ジャンル]  <%= @user.category %></td></tr>
    </table>
   
    <div class="row">
     <% if @user.sns_1? %>  
      <p><%= link_to"SNSリンク1",@user.sns_1, class: "btn btn-primary ml-3" %></p>
     <% end %> 
     <% if @user.sns_2? %>
      <p><%= link_to"SNSリンク2",@user.sns_2, class: "btn btn-success ml-3" %></P>
     <% end %>
    </div>
    <p><%= link_to "プロフィール編集へ",edit_user_path(@user), class: "btn btn-warning " %></p>
    
    <% if @interview %>
      <p><%= link_to"インタビュー編集へ",edit_interview_path(@interview),class:"btn btn-info " %></p>
      <p><%= link_to"インタビュー削除",@interview,method: :delete,data: { confirm: '本当に削除しますか？' },class:"btn btn-danger " %></p>
    <% else %>
      <p><%= link_to"インタビュー新規作成へ", new_interview_path(@user), class:"btn btn-info " %></p>
    <% end %>
    
    <p><%= link_to "ユーザー削除",root_path, class: "btn btn-danger float-right" %></p>
  </div>
    <div class="mt-5 col-sm-7 offset-sm-1">
      <p>拍手したユーザ</p>
    </div>
</div>
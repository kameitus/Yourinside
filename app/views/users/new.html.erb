<div class="text-center">
  <h1 class="pt-4">新規登録</h1>
</div>

<div class="row justify-content-center">
  <div class="col-sm-6 ">

    <%= form_with(model: @user, local: true) do |f| %>
    <%= render "layouts/error_messages",model: f.object %>
    
      <div class="form-group">
        <%= f.label :name, '名前', class: "text-danger  font-weight-bold" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メール',class: "text-danger  font-weight-bold" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード',class: "text-danger  font-weight-bold"%>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認',class: "text-danger  font-weight-bold" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '新規登録してMyページへ', class: 'btn btn-primary btn-block mt-5 active' %>
    <% end %>
  </div>
</div>
